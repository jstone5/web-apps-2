  <div class="container">
    <div class="row">
      <div class="col">
        <h1 class="display-6 mb-4">New Post</h1>
      </div>
    <%= yield %>
  </div>




<%= form_with model: @post do |form| %>
  <p>
    <%= form.label "author" %>
    <%= form.text_field "author" %>
  </p>
  <p>
    <%= form.label "body" %>
    <%= form.text_field "body" %>
  </p>
  <p>
    <%= form.label "image" %>
    <%= form.text_field "image" %>
  </p>
  <p>
  <%= form.submit "Create Post" %>
  </p>
<% end %>